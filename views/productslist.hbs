</div>


<!-- Main Content -->



<div class="main-content" id="main">

    <div class="container mt-5">
        <h4><b>All Products</b></h4>


        <!-- Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">

            <!-- breadcrumb -->

            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-secondary">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active text-dark" aria-current="page">All Products</li>
                </ol>
            </nav>


            <div class="d-flex gap-2">
              <a class="btn btn-outline-dark m-1" href="/products" type="button"><i class="bi bi-arrow-clockwise"></i></a>
                {{!-- <button class="btn btn-outline-secondary m-1"><i class="bi bi-sliders"></i> FILTER</button> --}}
                {{!-- <button class="btn btn-outline-secondary m-1"> Export <i class="bi bi-download"></i></button> --}}
                <a class="btn btn-dark m-1" href="/products/add"><i class="bi bi-plus"></i> ADD NEW PRODUCT</a>
            </div>
        </div>

        <!-- Tabs -->
        <ul class="nav mb-4">
            <li class="nav-item">
                <a class="tab-link active text-decoration-none" data-bs-toggle="tab" href="#listed">Listed Products</a>
            </li>
            <li class="nav-item">
                <a class="tab-link text-decoration-none" data-bs-toggle="tab" href="#unlisted">Unlisted Products</a>
            </li>
        </ul>



       <!-- ==============================================Listed Products=============================================================== -->

<!-- Tab Content -->
<div class="container-table">
  <div class="tab-content">
    <div class="tab-pane fade show active" id="listed">
      <div class="row g-3">

        
        <div class="col col-md-12 col-lg-12">

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Sl.No</th>
                  <th scope="col" class="ps-4">Product ID</th>
                  <th scope="col" class="ps-4" style="width: 250px;">Name</th>
                  <th class="col" class="ps-4">Sale Price</th>
                  <th scope="col" class="ps-4">Brand</th>
                  <th class="col" class="ps-4">Category</th>
                  <th scope="col" class="ps-4">Material</th>
                  <th class="col" class="ps-4">Warranty</th>
                  <th scope="col" class="ps-4">Unit Size</th>
                  <th scope="col" class="ps-4">Size</th>
                  <th scope="col" class="ps-4">Color</th>
                  <th scope="col" class="ps-4">Available</th>
                  <th scope="col" class="ps-4">Images</th>
                  <th scope="col" class="ps-4">Acton</th>

                </tr>
              </thead>
              <tbody>
                {{#each productsList}}
                <tr>
                  <th scope="row">{{addOne @index}}</th>
                  <td class="ps-4">#{{last8 this._id}}</td>
                  <td class="ps-4" style="width: 50px;">{{this.productName}}</td>
                  <th class="ps-4">â‚¹{{this.regularPrice}}</th>
                  <td class="ps-4">{{this.brandName}}</td>
                  <td class="ps-4">{{this.category}}</td>
                  <td class="ps-4">{{this.material}}</td>
                  <td class="ps-4">{{this.warranty}}</td>
                  
                  <td class="ps-4">{{this.unitSize}}</td>
                  <td class="ps-4 pt-2"><div>
                    {{#each this.variants}}
                    <p>{{this.size}}</p>
                    {{/each}}
                  </div></td>
                  <td class="ps-4"><div>
                    {{#each this.variants}}
                    <p><i class="bi bi-circle-fill" style="color: {{this.color}}"></i></p>
                    {{/each}}
                  </div></td>
                  <td class="ps-4"><div>
                    {{#each this.variants}}
                    <p>{{this.stockQuantity}}</p>
                    {{/each}}
                  </div></td>
                  
                  <td class="ps-4">

                    <div class="gallery">
                      {{#each imageUrl}}
                      <img src="/images/products/{{this}}" alt="1" onclick="openLightbox('images/products/{{this}}')">
                      {{/each}}
                    </div>

                    <!-- Lightbox -->
                    <div class="lightbox" id="lightbox" style="display: none;">
                      <img id="popup-img" src="" alt="Large Image">
                    </div>


                  </td>
                  <td class="ps-4">

                    <a href="" data-bs-toggle="modal" data-bs-target="#blockModal{{this._id}}"><i
                        class="bi bi-slash-circle text-danger me-3 fs-4"></i></a>

                    <a href="" data-bs-toggle="modal" data-bs-target="#update2BlockModal{{this._id}}">
                      <i class="bi bi-pencil text-dark me-3 icon-btn"></i></a>
                  </td>
                </tr>


                <!-- Unlist modal -->
                <div class="modal fade bg-setting" id="blockModal{{this._id}}" tabindex="-1"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog float-end me-5">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Moves to Unlisted <i
                            class="bi bi-slash-circle text-danger"></i></h1>
                        <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"
                          aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to unlist <strong>{{this.productName}}</strong> ?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>

                        <form action="/products/unlist/{{this._id}}?_method=PATCH" method="POST">
                          <input type="hidden" name="_method" value="PATCH" />
                          <button type="submit" class="btn btn-outline-danger">Unlist</a>
                        </form>

                      </div>
                    </div>
                  </div>
                </div>

                <!-- Update modal -->

                <div class="modal fade bg-setting" id="update2BlockModal{{this._id}}" tabindex="-1"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog float-end me-5">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Product</h1>
                        <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"
                          aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to edit <strong>{{this.productName}}</strong> ?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>

                        <form action="/products/edit/{{this._id}}">
                          <button type="submit" class="btn btn-outline-primary">Edit</a>
                        </form>

                      </div>
                    </div>
                  </div>
                </div>

                {{/each}}


              </tbody>
            </table>
          </div>

        </div>
      </div>



      <!-- Pagination -->
    <div class="mt-3 mb-4 pagination-pro">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          {{#if (gt currentPageUnlist 1)}}
          <li class="page-item">
            <a class="page-link pagination-border shadow-none" href="/products?page={{subtract currentPageUnlist 1}}"
              aria-label="Previous">
              <span aria-hidden="true" class="text-black">&lang;</span>
            </a>
          </li>
          {{/if}}
          {{#each (pagination totalPagesUnlist)}}
          <li class="page-item ms-2 {{#if (eq this ../currentPageUnlist)}}active{{/if}}">
            <a class="page-link pagination-number" href="/products?page={{this}}">{{this}}</a>
          </li>
          {{/each}}

          {{#if (lt currentPageUnlist totalPagesUnlist)}}
          <li class="page-item ms-2">
            <a class="page-link pagination-border shadow-none" href="/products?page={{add currentPageUnlist 1}}"
              aria-label="Next">
              <span aria-hidden="true" class="text-black">&rang;</span>
            </a>
          </li>
          {{/if}}
        </ul>
      </nav>
    </div>




    </div>

