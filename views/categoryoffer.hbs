<div class="main-content" id="main">

<div class="container my-5">
     <h4><b>Add Category Offers</b></h4>

    <!-- Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">

            <!-- breadcrumb -->

            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none text-secondary">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item"><a href="/offers" class="text-decoration-none text-secondary">Dashboard</a></li>
                    <li class="breadcrumb-item active text-dark" aria-current="page">Add Category Offer</li>
                </ol>
            </nav>

        </div>


  <form class="needs-validation" novalidate action="/offers/add/category-offer" method="POST">
                    <div class="row g-3">
                      <span id="error-msg"></span>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Select Catrgory Name</label>
                            <select class="form-select shadow-none" name="targetName" required>
                                <option value="" selected disabled>Select a category</option>
                                {{#each categoryData}}
                                <option value="{{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">Please select a category name.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Offer Name</label>
                            <input type="text" class="form-control shadow-none" name="offerName" placeholder="Enter offer name" required>
                            <div class="invalid-feedback">Please enter offer name.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Offer Percentage</label>
                            <div class="input-group">
                                <span class="input-group-text">%</span>
                                <input type="number" min="5" max="99" class="form-control shadow-none percentage-input" name="discountPercentage" placeholder="Enter discount price" required>
                                <div class="invalid-feedback">Less than 99 & Grater than 5 (add Amount/percentage)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Active Date</label>
                            <input type="date" id="activeDate1" class="form-control shadow-none" name="startDate" required>
                            <div class="invalid-feedback">Please check active date.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Expire Date</label>
                            <input type="date" id="activeDate2" class="form-control shadow-none" name="endDate" required>
                            <div class="invalid-feedback">Active date must be before or same as expiry date.</div>
                        </div>
                    </div>
                <div class="modal-footer border-0 mt-5">
                    <a href="/offers" type="button" class="btn btn-outline-dark px-4 me-3"><i class="bi bi-arrow-90deg-left"></i></a>
                    <button type="submit" class="btn btn-dark px-4">Add</button>
                </div>
            </form>
    
        

    </div>
</div>