<div class="main-content" id="main">

<div class="container my-5">
     <h4><b>Manage Offers</b></h4>

    <!-- Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">

            <!-- breadcrumb -->

            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-secondary">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active text-dark" aria-current="page">Offers</li>
                </ol>
            </nav>


            <div class="d-flex gap-2">
              <a class="btn btn-outline-dark m-1" href="/offers" type="button"><i class="bi bi-arrow-clockwise"></i></a>
                <a class="btn btn-outline-dark m-1" href="/offers/add/product-offer"><i class="bi bi-plus"></i> ADD PRODUCT OFFER</a>
                <a class="btn btn-outline-dark m-1" href="/offers/add/category-offer"><i class="bi bi-plus"></i> ADD CATEGORY OFFER</a>
            </div>
        </div>


    <div class="table-responsive">
      <table class="table align-middle">
        <thead>
          <tr>
            <th>Sl.No <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
            <th>Applied In <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
            <th style="width: 250px;">Name <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
            <th>Discount <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
            <th>Active From <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></i></th>
            <th>Expire To <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
            <th>Action <a href="" class="text-dark ms-1"><i class="bi bi-arrow-down-up"></i></a></th>
          </tr>
        </thead>
        <tbody>
         
          <!-- Example Rows -->
          <tr>
            {{#each offersData}}
            <td>{{addOne @index}}</td>
            <td>{{this.offerType}}</td>
            <td>{{this.targetName}}</td>
            {{#if (eq this.discountPercentage 'null')}}<td>â‚¹{{this.discountAmount}}</td>{{else}}<td>{{this.discountPercentage}}%</td>{{/if}}
            <td>{{formatDateFull this.startDate}}</td>
            <td>{{formatDateFull this.endDate}}</td>
            <td>
              <a href="" data-bs-toggle="modal" data-bs-target="#unBlockModal{{this._id}}"><i class="bi bi-trash-fill text-danger me-3"></i></a>
              <a href="/offers/edit/{{this.offerType}}/{{this._id}}">
              <i class="bi bi-pencil-fill text-dark"></i></a>
            </td>
          </tr>
          


          <!-- un block modal -->
          <div class="modal fade bg-setting" id="unBlockModal{{this._id}}" tabindex="-1"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog float-end me-5">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Offer</h1>
                  <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"
                    aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete offer ?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>

                  <form action="/offers/delete/{{this._id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                  </form>

                </div>
              </div>
            </div>
          </div>
        {{/each}}

          </tbody>
        </table>
        </div>


        <!-- Pagination -->
        <div class="mt-5 mb-4 d-flex pagination-pro justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
            {{#if (gt currentPage 1)}}
            <li class="page-item">
                <a class="page-link pagination-border shadow-none" href="/coupon?page={{subtract currentPage 1}}"
                aria-label="Previous">
                <span aria-hidden="true" class="text-black">&lang;</span>
                </a>
            </li>
            {{/if}}
            {{#each (pagination totalPages)}}
            <li class="page-item ms-2 {{#if (eq this ../currentPage)}}active{{/if}}">
                <a class="page-link pagination-number" href="/coupon?page={{this}}">{{this}}</a>
            </li>
            {{/each}}

            {{#if (lt currentPage totalPages)}}
            <li class="page-item ms-2">
                <a class="page-link pagination-border shadow-none" href="/coupon?page={{add currentPage 1}}"
                aria-label="Next">
                <span aria-hidden="true" class="text-black">&rang;</span>
                </a>
            </li>
            {{/if}}
            </ul>
        </nav>
        </div>


    </div>
</div>